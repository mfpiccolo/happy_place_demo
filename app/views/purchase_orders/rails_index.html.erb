<h1>Listing purchase_orders</h1>

<%= label_tag :id %>
<%= text_field_tag :id, nil, placeholder: "Id of record to update", data: {id: "" } %>
<%= label_tag :state %>
<%= text_field_tag :state, nil, placeholder: "Update the state", data: {input: 'state' } %>
<%= label_tag :important_info %>
<%= text_field_tag :important_info, nil, placeholder: "Update the important_info", data: {input: 'important_info' } %>

<table>
  <thead>
    <tr>
      <th>State</th>
      <th>Important info</th>
      <th>Order</th>
    </tr>
  </thead>

  <% @purchase_orders.each do |po| %>
    <tr class="po" data-model-purchase-order=<%= po.id %>>
      <td <%= data_attr_for :purchase_order, :state %> ><%= po.state %></td>
      <td <%= data_attr_for :purchase_order, :important_info %> ><%= po.important_info %></td>
      <td <%= data_attr_for :purchase_order, :order_id %> ><%= po.order_id %></td>
    </tr>
  <% end %>
</table>

<br>

<%= link_to 'New Purchase order', new_purchase_order_path %>
